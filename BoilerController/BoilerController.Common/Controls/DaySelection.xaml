<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:BoilerController.Common.Controls;assembly=BoilerController.Common"
             x:Class="BoilerController.Common.Controls.DaySelection">
  <ContentView.Content>
        <Frame CornerRadius="5" OutlineColor="Gray">
            <StackLayout Orientation="Horizontal" x:Name="DayLayout">
                <controls:SelectableLabel Text="{Binding Days[0].Day}" IsSelected="{Binding Days[0].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[1].Day}" IsSelected="{Binding Days[1].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[2].Day}" IsSelected="{Binding Days[2].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[3].Day}" IsSelected="{Binding Days[3].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[4].Day}" IsSelected="{Binding Days[4].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[5].Day}" IsSelected="{Binding Days[5].IsSelected, Mode=TwoWay}"/>
                <controls:SelectableLabel Text="{Binding Days[6].Day}" IsSelected="{Binding Days[6].IsSelected, Mode=TwoWay}"/>
            </StackLayout>
        </Frame>
  </ContentView.Content>
</ContentView>