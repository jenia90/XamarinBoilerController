<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoilerController.Views.SettingsPage" Title="Settings">
    <StackLayout Margin="10">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label VerticalOptions="Center" Text="Server Address" />
            <Entry HorizontalOptions="Center" Placeholder="Server Address" Text="{Binding ServerAddress}" />
        </StackLayout>
        <Button Text="Save" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>