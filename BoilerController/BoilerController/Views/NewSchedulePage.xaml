                            <local:SelectableLabel Text="{Binding Days[0].Day}" IsSelected="{Binding Days[0].IsSelected, Mode=TwoWay}"/>
                            <local:SelectableLabel Text="{Binding Days[1].Day}" IsSelected="{Binding Days[1].IsSelected, Mode=TwoWay}"/>
                            <local:SelectableLabel Text="{Binding Days[2].Day}" IsSelected="{Binding Days[2].IsSelected, Mode=TwoWay}"/>
                            <local:SelectableLabel Text="{Binding Days[3].Day}" IsSelected="{Binding Days[3].IsSelected, Mode=TwoWay}"/>
                            <local:SelectableLabel Text="{Binding Days[4].Day}" IsSelected="{Binding Days[4].IsSelected, Mode=TwoWay}"/>
